<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">

  <style>
    .invalid-feedback {
      display: initial;
    }
  </style>

  <title>Movie Search</title>
</head>

<body>

  <!--Search functionality-->
  <div class="container my-4">

    <br><h4>Search For Movies</h4><br>
    
    <form id="movie-search" action="" method="GET">
      
      <!--Search by title-->
      <div class="row">
        <div class="mb-3 col">
          <label for="title" class="form-label">Search by movie title:</label>
          <input class="form-control" type="text" name="title" id="title" placeholder="E.g Avengers" autocomplete="off" autofocus tabindex="1">
        </div>
      </div>
      <br>

      
      <div class="row">
        <!--search by genre-->
        <div class="mb-3 col">
          <label for="genres" class="form-label">Search by genre:</label>
          <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="genres" id="genres">
            <option value="" selected>Click to select</option>
            <option value="Action">Action</option>
            <option value="Adventure">Adventure</option>
            <option value="Animation">Animation</option>
            <option value="Comedy">Comedy</option>
            <option value="Crime">Crime</option>
            <option value="Drama">Drama</option>
            <option value="Family">Family</option>
            <option value="Fantasy">Fantasy</option>
            <option value="History">History</option>
            <option value="Horror">Horror</option>
            <option value="Mystery">Mystery</option>
            <option value="Romance">Romance</option>
            <option value="Science Fiction">Science Fiction</option>
            <option value="Thriller">Thriller</option>
            <option value="War">War</option>
          </select>
        </div>

        <!--search by production country-->
        <div class="mb-3 col">
          <label for="production_countries" class="form-label">Search by production country:</label>
          <select class="form-select form-select-sm" aria-label=".form-select-sm example" name="production_countries" id="production_countries">
            <option value="" selected>Click to select</option>
            <option value="Australia">Australia</option>
            <option value="Canada">Canada</option>
            <option value="Denmark">Denmark</option>
            <option value="France">France</option>
            <option value="Germany">Germany</option>
            <option value="Greece">Greece</option>
            <option value="Hungary">Hungary</option>
            <option value="Italy">Italy</option>
            <option value="Mexico">Mexico</option>
            <option value="New Zealand">New Zealand</option>
            <option value="Norway">Norway</option>
            <option value="Peru">Peru</option>
            <option value="Russia">Russia</option>
            <option value="United States of America">United States of America</option>
            <option value="United Kingdom">United Kingdom</option>
          </select>
        </div>
      </div>
      
      <!--submit form-->
      <div class="d-flex flex-row-reverse">
        <button type="submit" class="btn btn-primary">Search</button>
        <input class="btn btn-secondary me-2" type="reset" value="Reset" tabindex="15">
      </div>
    </form>
    
    <br><br><br>

    
    <!--Information about search result-->
    {{#if finalResult.data}}
      <h4>Showing results for:</h4><br>
      {{#if title}}Title: {{title}}<br>{{/if}}
      {{#if genres}}Genre: {{genres}}<br>{{/if}}
      {{#if production_countries}}Production country: {{production_countries}}{{/if}}
    {{/if}}

    {{#unless finalResult.data}}
    No results were found.
    {{/unless}}

  </div>
  
  
  <!-- Option 1: Bootstrap Bundle with Popper -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
    crossorigin="anonymous"></script>
</body>

</html>